<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.storyshu.storyshu">

    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--允许程序设置内置sd卡的写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序读写手机状态和身份-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/appTheme">

        <service android:name="com.amap.api.location.APSService" />

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="f586be2e1a9562e175e4e96018ed79cc" />

        <activity
            android:name="com.storyshu.storyshu.activity.welcome.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.storyshu.storyshu.activity.storymap.StoryMapActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.login.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.storyshu.storyshu.activity.Test"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.storyshu.storyshu.activity.create.CreateStoryActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.storyshu.storyshu.activity.story.StoryDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.create.CreateCoverActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>