<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleView">
        <attr name="title_string" format="string|reference" />
        <attr name="title_color" format="color|reference" />
        <attr name="title_size" format="dimension|reference" />
        <attr name="title_mode" format="enum">
            <enum name="MenuTitleSift" value="0" />
            <enum name="BackTitle" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SelectorGroup">
        <attr name="selectorMode" format="enum">
            <enum name="CheckButton" value="0" />
            <enum name="RadioButton" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SelectorButton">
        <attr name="text_color" format="color|reference" />
        <attr name="text_string" format="string|reference" />
        <attr name="text_size" format="dimension|reference" />
        <attr name="icon_padding" format="dimension|reference" />
        <attr name="layout_padding" format="dimension|reference" />
        <attr name="icon_position" format="enum">
            <enum name="Left" value="0" />
            <enum name="Top" value="1" />
            <enum name="Right" value="2" />
            <enum name="Bottom" value="3" />
        </attr>
    </declare-styleable>


    <declare-styleable name="RoundImageView">
        <attr name="Scale" format="float" />
        <attr name="BorderRadius" format="dimension|reference" />
        <attr name="RoundType">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
            <enum name="round_top_left_top_right" value="2" />
            <enum name="round_bottom_left_bottom_right" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio" format="float|reference" />
    </declare-styleable>

    <declare-styleable name="AutoScaleLayout">
        <attr name="scaleRate" format="float" />
    </declare-styleable>

</resources>