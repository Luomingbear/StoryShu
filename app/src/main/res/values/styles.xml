<resources>

    <!--日间模式-->
    <style name="appTheme_day" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorGoldLight</item>
        <item name="colorPrimary">@color/colorGoldLight</item>
        <item name="android:textColorPrimary">@color/colorGrayLight</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorGrayDeep</item>
        <item name="textColor">@color/colorGrayLight</item>
        <item name="colorAccent">@color/colorGoldLight</item>
        <item name="colorControlNormal">@color/colorGrayDeep</item>
        <item name="android:textColorHighlight">@color/colorGrayLight</item>
    </style>

    <!--夜间模式-->
    <style name="appTheme_night" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/colorGrayLight</item>
        <item name="colorAccent">@color/colorGrayDeep</item>
    </style>

    <style name="StoryDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MenuDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="menuAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_in</item>
        <item name="android:windowExitAnimation">@anim/menu_out</item>
    </style>

    <style name="moreDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/more_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/more_dialog_out</item>
    </style>

</resources>
