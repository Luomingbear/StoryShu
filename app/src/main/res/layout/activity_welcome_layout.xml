<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/image_normal"
        android:layout_height="@dimen/image_normal"
        android:layout_centerInParent="true"
        android:src="@drawable/dishudong_bg" />

    <ImageView
        android:id="@+id/welcome_dishu"
        android:layout_width="@dimen/image_normal"
        android:layout_height="@dimen/image_normal"
        android:layout_centerInParent="true"
        android:src="@drawable/dishu" />

    <View
        android:layout_width="@dimen/image_normal"
        android:layout_height="match_parent"
        android:layout_below="@id/welcome_dishu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-19dp"
        android:background="@color/colorWhite" />

    <ImageView
        android:layout_width="@dimen/image_normal"
        android:layout_height="@dimen/image_normal"
        android:layout_centerInParent="true"
        android:src="@drawable/dishudong" />

    <TextView
        android:id="@+id/welcome_logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_dishu"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorRedPomegranateLight"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/welcome_skip"
        android:layout_width="80dp"
        android:layout_height="@dimen/selector_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_big"
        android:gravity="center"
        android:text="@string/skip" />
</RelativeLayout>