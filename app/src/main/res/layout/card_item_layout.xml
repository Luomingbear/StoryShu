<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@color/cardview_light_background"
    android:elevation="@dimen/height_big"
    android:padding="@dimen/margin_small"
    app:cardCornerRadius="@dimen/border_radius_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <com.storyshu.storyshu.widget.imageview.RoundImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_margin="0.5dp"
                android:src="?attr/cardTopBg"
                app:BorderRadius="@dimen/border_radius_normal"
                app:RoundType="round_top_left_top_right" />

            <com.storyshu.storyshu.widget.imageview.AvatarImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/image_normal"
                android:layout_height="@dimen/image_normal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:src="@drawable/gray_rectangle" />

            <LinearLayout
                android:id="@+id/oppose_layout"
                android:layout_width="@dimen/icon_large"
                android:layout_height="@dimen/icon_large"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/oppose"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@drawable/button_oppose"
                    android:button="@null"
                    android:clickable="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="@dimen/icon_large"
                android:layout_height="@dimen/icon_large"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_toLeftOf="@id/oppose_layout"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/like"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@drawable/button_like"
                    android:button="@null"
                    android:clickable="false" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toLeftOf="@id/like_layout"
                android:layout_toRightOf="@id/avatar"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_normal" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/destroy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/margin_min"
                    android:textColor="?attr/textColor3"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGrayLight" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_normal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/line_space_big"
                android:maxLines="2"
                android:textColor="?attr/textColor2"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/cover_pic"
                android:layout_width="@dimen/image_big"
                android:layout_height="@dimen/image_big"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="@color/colorGrayLight"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>