<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_story_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.storyshu.storyshu.activity.story.StoryMapActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/story_map_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.amap.api.maps.MapView>

    <!--顶部的标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/font_big"
            android:layout_height="@dimen/font_big"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:src="@drawable/logo_line_w" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_min"
            android:layout_toRightOf="@id/logo"
            android:text="@string/app_name"
            android:textColor="?attr/titleTextColor"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:gravity="center"
            android:text="@string/check_in"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="@dimen/font_normal" />
    </RelativeLayout>

    <com.storyshu.storyshu.widget.story.StoriesAdapterView
        android:id="@+id/story_card_window"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_big" />

</RelativeLayout>
