<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="@drawable/card_view_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:scaleRate="1.4">

    <com.storyshu.storyshu.widget.imageview.RoundImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test"
        app:BorderRadius="@dimen/border_radius_normal"
        app:RoundType="round_top_left_top_right" />

    <LinearLayout
        android:id="@+id/num_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:src="@drawable/like"
                android:tint="@color/colorGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="324"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:src="@drawable/message"
                android:tint="@color/colorGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="35"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_layout"
        android:layout_margin="@dimen/margin_normal"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/line_space_normal"
        android:maxLines="3"
        android:text="哥谭的秋天，像这座城市一样带着毁灭的韵脚，尤其是一个joker重获自由的秋日。"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_min"
            android:layout_height="@dimen/icon_min"
            android:src="@drawable/location"
            android:tint="@color/colorGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="浙江传媒学院"
            android:textColor="@color/colorGrayDeep"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</RelativeLayout>