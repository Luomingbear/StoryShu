<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.storyshu.storyshu.widget.title.TitleView
        android:id="@id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        app:title_color="@color/colorRedPomegranate"
        app:title_mode="BackTitle"
        app:title_size="@dimen/font_normal">

    </com.storyshu.storyshu.widget.title.TitleView>

    <com.storyshu.storyshu.widget.imageview.RoundImageView
        android:id="@+id/story_detail_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:layout_margin="@dimen/margin_cover"
        android:transitionName="story_pic"
        app:BorderRadius="0dp"
        app:Scale="1" />


</RelativeLayout>