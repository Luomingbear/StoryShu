<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_min">

        <com.storyshu.storyshu.widget.imageview.RoundImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/icon_normal"
            android:layout_height="@dimen/icon_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@drawable/avatar_superman"
            app:RoundType="circle" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatar"
            android:layout_marginLeft="@dimen/margin_min"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/avatar"
            android:text="2017.1.1"
            android:textColor="@color/colorGrayDeep"
            android:textSize="@dimen/font_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar"
            android:layout_alignRight="@id/create_date"
            android:layout_marginLeft="@dimen/margin_min"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/font_min"
                android:layout_height="@dimen/font_min"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:singleLine="true"
                android:text="@string/edit_location"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/font_min" />
        </LinearLayout>
    </RelativeLayout>

    <com.storyshu.storyshu.widget.imageview.RoundImageView
        android:id="@+id/detail_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_layout"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:background="@color/colorGrayLight"
        app:BorderRadius="0dp"
        app:Scale="2.2" />

    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_pic"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_small"
        android:singleLine="true"
        android:text="路人三千"
        android:textColor="@color/colorRedPomegranateDeep"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/extract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/story_title"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/margin_min"
        android:maxLines="2"
        android:textColor="@color/colorGrayDeep"
        android:textSize="@dimen/font_min" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/extract"
        android:background="@color/colorGrayLight" />

    <View
        android:id="@+id/story_click_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/line" />

</RelativeLayout>