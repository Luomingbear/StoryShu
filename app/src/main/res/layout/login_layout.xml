<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical">


    <com.storyshu.storyshu.widget.GravityLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/map_line_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="center"
            android:src="@drawable/map_line" />
    </com.storyshu.storyshu.widget.GravityLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_tr_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <!--登录、注册-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big_more"
            android:layout_marginRight="@dimen/margin_big_more"
            android:layout_marginTop="@dimen/title_height"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_big">

                <ImageView
                    android:id="@+id/login_avatar"
                    android:layout_width="@dimen/image_normal"
                    android:layout_height="@dimen/image_normal"
                    android:src="@drawable/logo_line" />
            </RelativeLayout>

            <!--邮箱-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_phone_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorGoldLight"
                    android:textSize="@dimen/font_normal" />
            </android.support.design.widget.TextInputLayout>

            <!--密码-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/colorGrayDeep"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:textColor="@color/colorGoldLight"
                    android:textSize="@dimen/font_normal" />
            </android.support.design.widget.TextInputLayout>

            <!--注册-->
            <LinearLayout
                android:id="@+id/login_verify_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/selector_height"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_min"
                    android:layout_weight="1"
                    android:background="@drawable/text_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/login_verify_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@null"
                        android:hint="@string/input_verify_number"
                        android:inputType="number"
                        android:textColorHint="@color/colorGrayLight"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <com.storyshu.storyshu.widget.text.RoundTextView
                    android:id="@+id/login_get_verify_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_min"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="@string/get_verify_number"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_normal">

                </com.storyshu.storyshu.widget.text.RoundTextView>

            </LinearLayout>

            <TextView
                android:id="@+id/login_login_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/selector_height"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/button_gold"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/login_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/selector_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:gravity="center"
                    android:text="@string/forgot_password"
                    android:textColor="@color/colorGoldLight"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/login_free_register"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/selector_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:gravity="center"
                    android:text="@string/free_register"
                    android:textColor="@color/colorGoldLight"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>
        </LinearLayout>

        <!--第三方登录-->

    </ScrollView>
</RelativeLayout>