<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.storyshu.storyshu.widget.title.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="?attr/colorPrimary"
        app:title_color="?attr/titleTextColor"
        app:title_mode="BackTitle"
        app:title_string="@string/story_detail">

    </com.storyshu.storyshu.widget.title.TitleView>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/story_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/card_view_bg">

                <TextView
                    android:id="@+id/story_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:lineSpacingExtra="@dimen/line_space_small"
                    android:text="出了近铁布施站，沿着铁路径直向西。已经十月了，天气仍闷热难当，地面也很干燥。每当卡车疾驰而过，扬起的尘土极可能会让人又皱眉又揉眼睛。 笹垣润三的脚步说不上轻快。他今天本不必出勤。很久没休假了，还以为今天可以悠游地看点书。"
                    android:textColor="?attr/contentColor"
                    android:textSize="@dimen/font_small" />

                <ImageView
                    android:id="@+id/story_pic"
                    android:layout_width="@dimen/image_small"
                    android:layout_height="@dimen/image_small"
                    android:layout_below="@id/story_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test" />

                <TextView
                    android:id="@+id/pic_size"
                    android:layout_width="@dimen/font_normal"
                    android:layout_height="@dimen/font_normal"
                    android:layout_alignBottom="@id/story_pic"
                    android:layout_alignRight="@id/story_pic"
                    android:background="@color/colorBlack"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/colorGrayLight"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/pic_size"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/report"
                    android:textColor="?attr/textColor3" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/pic_size"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@id/report"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="浙江省杭州市浙江传媒学院"
                    android:textColor="?attr/textColor3" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:layout_below="@id/location"
                    android:layout_marginTop="@dimen/margin_small">

                    <com.storyshu.storyshu.widget.imageview.RoundImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/title_height"
                        android:layout_margin="1dp"
                        android:src="?attr/cardTopBg"
                        app:BorderRadius="@dimen/border_radius_normal"
                        app:RoundType="round_bottom_left_bottom_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorWhiteDeep" />

                    <com.storyshu.storyshu.widget.imageview.AvatarImageView
                        android:id="@+id/author_avatar"
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:src="@drawable/avatar_superman" />

                    <com.storyshu.storyshu.widget.ClickButton
                        android:id="@+id/comment_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_normal"
                        app:cGravity="top"
                        app:cType="comment" />

                    <com.storyshu.storyshu.widget.ClickButton
                        android:id="@+id/oppose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_toLeftOf="@id/comment_content"
                        app:cGravity="top"
                        app:cType="oppose" />

                    <com.storyshu.storyshu.widget.ClickButton
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_toLeftOf="@id/oppose"
                        app:cGravity="top"
                        app:cType="like" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_toLeftOf="@id/like"
                        android:layout_toRightOf="@id/author_avatar"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/author_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="?attr/textColor2"
                            android:textSize="@dimen/font_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_min"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/create_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_min"
                                android:text="10小时前"
                                android:textColor="?attr/textColor3"
                                android:textSize="@dimen/font_min" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_min"
                                android:text="剩余13小时"
                                android:textColor="?attr/textColor3"
                                android:textSize="@dimen/font_min" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/card_view_bg">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>