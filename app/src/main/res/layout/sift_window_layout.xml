<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shift_window_bg"
    android:orientation="vertical">

    <com.storyshu.storyshu.widget.selector.SelectorGroup
        android:id="@+id/sift_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:selectorMode="RadioButton">

        <com.storyshu.storyshu.widget.selector.SelectorButton
            android:id="@+id/sift_all"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/selector_height"
            app:icon_position="Center"
            app:need_drawable="false"
            app:text_string="@string/sift_all" />

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGrayLight" />

        <com.storyshu.storyshu.widget.selector.SelectorButton
            android:id="@+id/sift_hot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            app:icon_position="Center"
            app:need_drawable="false"
            app:text_string="@string/sift_hot" />

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGrayLight" />

        <com.storyshu.storyshu.widget.selector.SelectorButton
            android:id="@+id/sift_follow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            app:icon_position="Center"
            app:need_drawable="false"
            app:text_string="@string/sift_follow" />
    </com.storyshu.storyshu.widget.selector.SelectorGroup>
</LinearLayout>