<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.bear.passby.widget.selector.SelectorGroup
        android:id="@+id/sift_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:selectorMode="RadioButton">

        <com.bear.passby.widget.selector.SelectorButton
            android:id="@+id/sift_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            app:text_string="@string/sift_all" />

        <com.bear.passby.widget.selector.SelectorButton
            android:id="@+id/sift_hot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            app:text_string="@string/sift_hot" />

        <com.bear.passby.widget.selector.SelectorButton
            android:id="@+id/sift_follow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            app:text_string="@string/sift_follow" />
    </com.bear.passby.widget.selector.SelectorGroup>
</LinearLayout>