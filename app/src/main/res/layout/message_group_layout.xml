<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height">

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="@dimen/image_small"
        android:layout_height="@dimen/image_small"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_normal" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_toRightOf="@id/message_icon"
        android:text="@string/like2me"
        android:textColor="?attr/textColor2"
        android:textSize="@dimen/font_normal" />

    <ImageView
        android:id="@+id/expand_icon"
        android:layout_width="@dimen/icon_min"
        android:layout_height="@dimen/icon_min"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_normal"
        android:src="@drawable/message_array_down" />

</RelativeLayout>