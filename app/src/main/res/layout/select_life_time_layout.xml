<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_gray_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_big"
        android:text="@string/select_life_time"
        android:textColor="?attr/textColor3"
        android:textSize="@dimen/font_big" />

    <com.storyshu.storyshu.widget.LifeTimeSelector
        android:id="@+id/life_time_selector"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="0.5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/selector_height"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal">

        <com.storyshu.storyshu.widget.text.RoundTextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="?attr/textColor3"
            android:textSize="@dimen/font_big"
            app:mBgColor="@color/colorWhite" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorGrayLight" />

        <com.storyshu.storyshu.widget.text.RoundTextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/colorGoldLight"
            android:textSize="@dimen/font_big"
            app:mBgColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>