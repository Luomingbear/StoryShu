<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_statusbar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/colorBlack" />

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_below="@id/fake_statusbar_view"
        android:background="@color/colorBlack"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="@dimen/icon_min"
            android:layout_height="@dimen/icon_min"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:src="@drawable/search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_toRightOf="@id/search_icon"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/search_hint"
            android:textColor="@color/colorGrayLight"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/search_icon"
            android:layout_below="@id/search_icon"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/colorGoldLight" />
    </RelativeLayout>

    <!--候机厅官方推荐-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/airport_push_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:background="@color/colorGrayLight">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>