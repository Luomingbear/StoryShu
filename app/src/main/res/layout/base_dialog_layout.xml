<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_gray_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="测试版第一版"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/font_big" />

    <TextView
        android:id="@+id/describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/line_space_normal"
        android:minHeight="100dp"
        android:text="增加了定位功能，所有的功能都得到了改善！！，所有的功能都得到了改善！！，所有的功能都得到了改善！！"
        android:textColor="?attr/textColor2"
        android:textSize="@dimen/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayLight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0.5dp"
        android:paddingLeft="0.5dp"
        android:paddingRight="0.5dp">

        <com.storyshu.storyshu.widget.text.RoundTextView
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/selector_height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="?attr/textColor3"
            android:textSize="@dimen/font_big"
            app:mBgColor="@color/colorWhite"
            app:roundType="leftBottom" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/selector_height"
            android:background="@color/colorGrayLight" />

        <com.storyshu.storyshu.widget.text.RoundTextView
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/selector_height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/font_big"
            app:mBgColor="@color/colorWhite"
            app:roundType="rightBottom" />
    </LinearLayout>

</LinearLayout>