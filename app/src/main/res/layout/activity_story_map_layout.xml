<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_story_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.storyshu.storyshu.activity.story.StoryMapActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/story_map_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.amap.api.maps.MapView>
    <!--标题栏 -->
    <com.storyshu.storyshu.widget.title.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:title_mode="MenuTitle"
        app:title_size="@dimen/font_normal"
        app:title_string="@string/app_name">

    </com.storyshu.storyshu.widget.title.TitleView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/icon_large">

        <!--创建故事-->
        <ImageView
            android:id="@+id/story_map_create_story"
            android:layout_width="@dimen/image_normal"
            android:layout_height="@dimen/image_normal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_create_story"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/create"
            android:text="@string/create_story"
            android:textColor="@color/colorWhite" />

        <!--获取当前的位置定位-->
        <ImageView
            android:id="@+id/story_map_get_position"
            android:layout_width="@dimen/icon_normal"
            android:layout_height="@dimen/icon_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/margin_big"
            android:background="@drawable/button_get_position"
            android:scaleType="centerInside"
            android:src="@drawable/get_location" />

    </RelativeLayout>

</RelativeLayout>
