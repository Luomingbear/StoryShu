<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_radius_normal" />
            <gradient android:endColor="@color/colorRed" android:startColor="@color/colorRedLight" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/border_radius_normal" />
            <gradient android:endColor="@color/colorRed" android:startColor="@color/colorOrange" />

        </shape>
    </item>
</selector>